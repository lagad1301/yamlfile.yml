ReplicationController
-----------
apiVersion: v1
kind: ReplicationController
metadata: 
  name: my-rc
spec: 
 replicas: 3
 selector: 
   app: myapp

template: 
 metadata: 
   name: tmp-1
   labels: 
     app: myapp
 spec:
  containers:
  - name: cont-1
    image: nginx
    ports:
    - containerPort: 80
