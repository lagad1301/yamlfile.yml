ReplicaSet yaml

apiVersion: apps/v1
kind: ReplicaSet
metadata:
  name: my-rs
spec:
 replicas: 2
 selector:
  matchLabels:
   app: my-app

 template:
  metadata:
    name: tmp-1
    labels:
      app: my-app
  spec:
   containers:
   - name: cont-1
     image: nginx
     ports:
     - containerPort: 80
